<suite name="E-Commerce Suite">
    <listeners>
        <listener class-name="org.testng.reporters.XMLReporter" />
    </listeners>
    <test name="Functional Tests">
        <classes>
            <class name="testcases.LoginTest"/>
            <class name="testcases.AddToCartTest"/>
            <class name="testcases.AddMultipleItemsTest"/>
            <class name="testcases.CheckoutTest"/>
            <class name="testcases.LogoutTest"/>
        </classes>
    </test>
</suite>



        <!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="CrossBrowserSuite" parallel="tests" thread-count="3">

<test name="Chrome_Grid">
    <parameter name="browser" value="chrome" />
    <parameter name="useGrid" value="true" />
    <classes>
        <class name="testcases.LoginTest" />
        <class name="testcases.LogoutTest" />
        <class name="testcases.SearchTest" />
    </classes>
</test>

<test name="Firefox_Local">
    <parameter name="browser" value="firefox" />
    <parameter name="useGrid" value="false" />
    <classes>
        <class name="testcases.LoginTest" />
    </classes>
</test>

</suite>
